<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FloripaBus.DetailsView">
	<ContentPage Title="Stops">
		<StackLayout>
			<Label Text="{Binding RouteId}"></Label>
		</StackLayout>
	</ContentPage>
	<CarouselPage Title="Departures">
		<ContentPage>
			<StackLayout>
				<Label Text="Weekday"></Label>
			</StackLayout>
		</ContentPage>
		<ContentPage>
			<StackLayout>
				<Label Text="Saturday"></Label>
			</StackLayout>
		</ContentPage>
		<ContentPage>
			<StackLayout>
				<Label Text="Sunday"></Label>
			</StackLayout>
		</ContentPage>
	</CarouselPage>
</TabbedPage>
