<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FloripaBus.DetailsView" Title="{Binding Title}">
	<ContentPage Title="Stops">
		<StackLayout>
			<ListView x:Name="RouteStopsListView" ItemsSource="{Binding RouteStops}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<ViewCell.View>
									<StackLayout Spacing="5" Orientation="Horizontal">									
		                    			<Label Text="{Binding Sequence}"></Label>
		                    			<Label Text="{Binding Name}"></Label>
		                  			</StackLayout>
								</ViewCell.View>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
		</StackLayout>
	</ContentPage>
	<CarouselPage Title="Departures">
		<ContentPage>
			<StackLayout>
				<Label Text="Weekday"></Label>
			</StackLayout>
		</ContentPage>
		<ContentPage>
			<StackLayout>
				<Label Text="Saturday"></Label>
			</StackLayout>
		</ContentPage>
		<ContentPage>
			<StackLayout>
				<Label Text="Sunday"></Label>
			</StackLayout>
		</ContentPage>
	</CarouselPage>
</TabbedPage>
